<script setup lang="uts">
import { ref } from 'vue'

const formData = ref({
	username: '',
	phone: '',
	code: '',
	password: '',
	confirmPassword: ''
})

const countdown = ref(0)

// 发送验证码
const sendCode = () => {
	if (!formData.value.phone) {
		uni.showToast({
			title: '请输入手机号',
			icon: 'none'
		})
		return
	}
	
	if (!/^1[3-9]\d{9}$/.test(formData.value.phone)) {
		uni.showToast({
			title: '请输入正确的手机号',
			icon: 'none'
		})
		return
	}
	
	// 开始倒计时
	countdown.value = 60
	const timer = setInterval(() => {
		countdown.value--
		if (countdown.value <= 0) {
			clearInterval(timer)
		}
	}, 1000)
	
	// 这里添加发送验证码的逻辑
	uni.showToast({
		title: '验证码已发送',
		icon: 'success'
	})
}

// 注册
const handleRegister = () => {
	if (!formData.value.username || !formData.value.phone || !formData.value.code || 
		!formData.value.password || !formData.value.confirmPassword) {
		uni.showToast({
			title: '请填写完整信息',
			icon: 'none'
		})
		return
	}
	
	if (formData.value.password !== formData.value.confirmPassword) {
		uni.showToast({
			title: '两次输入的密码不一致',
			icon: 'none'
		})
		return
	}
	
	uni.showLoading({
		title: '注册中...'
	})
	
	setTimeout(() => {
		uni.hideLoading()
		uni.showToast({
			title: '注册成功',
			icon: 'success'
		})
		setTimeout(() => {
			uni.navigateBack()
		}, 1500)
	}, 1500)
}

// 返回登录页
const navigateToLogin = () => {
	uni.navigateBack()
}
</script>

