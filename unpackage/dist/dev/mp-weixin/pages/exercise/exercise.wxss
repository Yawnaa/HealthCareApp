@import "../../uvue.wxss";
:host{display:flex;flex-direction:column}

.container {
	min-height: 100vh;
	background-color: #f7f7f7;
}
.nav-bar {
	display: flex;
	align-items: center;
	padding: 20rpx;
	background-color: #fff;
	border-bottom: 1rpx solid #f5f5f5;
}
.back-btn {
	padding: 20rpx;
	display: flex;
	align-items: center;
	justify-content: center;
}
.back-icon {
	font-size: 40rpx;
	color: #333;
	font-weight: bold;
}
.title {
	flex: 1;
	text-align: center;
	font-size: 32rpx;
	font-weight: bold;
	color: #333;
}
.data-card {
	display: flex;
	justify-content: space-around;
	padding: 40rpx;
	background-color: #fff;
	margin: 20rpx;
	border-radius: 20rpx;
}
.data-item {
	display: flex;
	flex-direction: column;
	align-items: center;
}
.data-value {
	font-size: 40rpx;
	font-weight: bold;
	color: #4A90E2;
	margin-bottom: 10rpx;
}
.data-label {
	font-size: 24rpx;
	color: #666;
}
.exercise-list {
	background-color: #fff;
	margin: 20rpx;
	padding: 30rpx;
	border-radius: 20rpx;
}
.list-title {
	font-size: 32rpx;
	font-weight: bold;
	color: #333;
	margin-bottom: 30rpx;
}
.list-item {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 20rpx 0;
	border-bottom: 1rpx solid #f5f5f5;
}
.list-item:last-of-type {
	border-bottom: none;
}
.item-left {
	display: flex;
	align-items: center;
}
.exercise-icon {
	width: 80rpx;
	height: 80rpx;
	margin-right: 20rpx;
}
.exercise-info {
	display: flex;
	flex-direction: column;
}
.exercise-name {
	font-size: 30rpx;
	color: #333;
	margin-bottom: 6rpx;
}
.exercise-time {
	font-size: 24rpx;
	color: #999;
}
.item-right {
	display: flex;
	flex-direction: column;
	align-items: flex-end;
}
.exercise-duration {
	font-size: 28rpx;
	color: #333;
	margin-bottom: 6rpx;
}
.exercise-calories {
	font-size: 24rpx;
	color: #4A90E2;
}
